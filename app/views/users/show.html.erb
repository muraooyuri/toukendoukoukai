<main>
    <div class="container px-5 px-sm-0">
     <div class="row">
        <div class="col-12 col-md-4 col-lg-3">
          <%= render "layouts/sidebar" %>
        </div>
      <div class="col-12 col-md-8 col-lg-9">
        <h2><%= @user.name %>さんの投稿一覧</h2>
        <div class="card-group text-dark">
          <% @user.toukens.each do | touken | %>
          <div class="card mx-1 mb-2" style="width: 14rem;flex:unset;">
            <%= image_tag touken.image.variant(resize: '200x200'),class:"card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><%= touken.title %></h5>
              <p class="card-text">
                <%= touken.body %><br>
                <% touken.touken_comments.each do |comment| %>
                  <%= link_to "#{comment.comment} コメント", touken_path(touken.id) %>
                <% end %>
              </p>
            </div>
          </div>
          <% end %>
        </div>
      </div>
     </div>
   </div>
</main>
