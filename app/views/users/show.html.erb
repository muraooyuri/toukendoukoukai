<main>
  <div>
    <%= flash[:notice] %>
   </div>
     <div class= "container px-5 px-sm-0">
       <div class= "row">
        <div class="col-md-10">
         <h2><%= @user.name %>さんの投稿一覧</h2>
          <table class="table table-hover table-inverse">
           <thead>
            <tr>
              <th>タイトル</th>
              <th>投稿内容</th>
              <th>写真</th>
             </tr>
            </thead>
            <tbody>
             <% @user.toukens.each do | touken | %>
              <tr>
               <th><%= touken.title %></th>
               <th><%= touken.body %></th>
               <th><%= image_tag touken.image.variant(resize: '200x200') %></th>
              </tr>
             <% end %>
            </tbody>
          </table>
        </div>
       </div>
     </div>
</main>
