<main>
    <div class="container px-5 px-sm-0">
     <div class="row">
        <div class="col-12 col-md-4 col-lg-3">
          <%= render "layouts/sidebar" %>
        </div>
      <div class="col-12 col-md-8 col-lg-9">
        <h2><%= @user.name %>さんの投稿一覧</h2>
        <div class="row text-dark">
          <% @user.toukens.each do | touken | %>
            <div class="col-12 col-lg-4">
              <div class="card mx-1 mb-2">
                <%= image_tag touken.image.variant(resize: '200x200'),class:"card-img-top" %>
                <div class="card-body">
                  <h5 class="card-title">
                    <%= link_to touken_path(touken) do %>
                      <%= touken.title %>
                    <% end %>
                  </h5>
                  <p class="card-text">
                    <%= touken.body.truncate(20) %>
                  </p>
                </div>
                <!-- 右寄せClass: text-right -->
                <div class="card-footer text-right">
                  <small class="text-black-50">
                    <%= link_to touken_path(touken) do %>
                      <%= touken.touken_comments.count %>件のコメント
                    <% end %>
                  </small>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
     </div>
   </div>
</main>
