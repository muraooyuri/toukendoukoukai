<main>
  <div class= "container">
    <div class="row">
      <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>カテゴリの追加</h2>
       <%= form_with model: @category, local: true do |f| %>
          <div class='from_input'>
            <%= f.label :name %>
            <%= f.text_field :name %>
          </div>
          <div class="form_action">
            <%= f.submit "登録する", class: "btn btn-primary" %>
          </div>
       <% end %>
      </div>
    </div>
  </div>
</main>