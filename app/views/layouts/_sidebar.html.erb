<main>
  <div class="container">
    <div class="row">
      <div class="col pt-2">
      <%= form_with url: toukens_path, local: true, method: :get do |form| %>
        <%= form.text_field :keyword, class: 'form-control' %>
        <%= form.submit '検索', class: 'btn btn-outline-secondary btn-auto' %>
      <% end %>
      <div class="pt-3">
       <h5>ジャンル</h5>
        <% @genres.each do |genre| %>
          <%= link_to genre.name, genre_toukens_path(genre) %><br>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</main>