<main>
  <div>
    <div class="pt-2">
    <%= form_with url: toukens_path, :id => "form", local: true, method: :get do |form| %>
      <%= form.text_field :keyword, :placeholder => "free word ", class: 'sbox' %>
      <%= form.submit '検索', class: 'side-btn' %>
    <% end %>
    </div>
    <div class="pt-3">
     <h5>ジャンル</h5>
      <% @genres.each do |genre| %>
        <%= link_to genre.name, genre_toukens_path(genre), class: "side-genre" %><br>
      <% end %>
    </div>
  </div>
</main>