<main>
  <div class= "container">
    <div class="row">
      <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>みんなの投稿</h1>
        <%= form_with model: @touken do |f|%>
          <div class="form-group">
            <label for="touken_title">タイトル</label><br>
            <%= f.text_field :title%>
          </div>
           <div class="form-group">
             <label for="book_opinion">投稿内容</label><br>
             <%= f.text_area :body%>
           </div>
           <div class="form-group">
             <%= f.submit'投稿' %>
           </div>
        <% end %>
       </div>
    </div>
  </div>
</main>